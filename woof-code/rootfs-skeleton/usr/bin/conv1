#!/bin/bash

file=$1
outfile=$(basename $1)
path1=$2
outfile=${outfile%.*}

echo "output: $2$outfile"

while IFS='' read -r line || [[ -n "$line" ]]; do

	echo $line
	
	nr=${line%/}

	if [ -d $nr ]; then
	echo $nr >> "$2$outfile"
	else
	filename=$(basename $nr)
	echo " $filename" >> "$2$outfile"
	fi

done < $file
